{
  "name": "<%= props.name %>",
  "version": "<%= props.version %>",
  <% if (props.description !== '') { %>"description": "<%= props.description %>",<% } %>
  "main": "<%= props.entryPoint %>",
  "scripts": {
    "test": "<%- props.testCommand %>",
    "compile": "tsc && truffle compile",
    "format": "prettier --write *.ts **/*.ts test/**/*.ts"
  },
  <% if (props.gitRepository !== '') { %>"repository": {
    "type": "git",
    "url": "<%= props.gitRepository %>"
  },<% } %>
  <% if (props.author !== '') { %>"author": {
    "name": "<%= props.author %>"<% if (props.authorUrl !== '') { %>,
    "url": "<%= props.authorUrl %>"<% } %>
  },<% } %>
  "license": "<%= props.license %>",
  "devDependencies": {
    "@types/chai": "^4.0.8",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.57",
    "@types/ramda": "^0.25.8",
    "bignumber.js": "^5.0.0",
    "chai": "^4.1.2",
    "prettier": "^1.9.2",
    "ramda": "^0.25.0",
    "solhint": "^1.1.10",
    "truffle": "4.0.4",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
