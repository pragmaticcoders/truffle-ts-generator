{
  "name": "<%= props.name %>",
  "version": "<%= props.version %>",
  <% if (props.description !== '') { %>"description": "<%= props.description %>",<% } %>
  "main": "index.js",
  "scripts": {
    "compile": "run-s compile:ts compile:sol",
    "compile:sol": "truffle compile",
    "compile:ts": "tsc",
    "test": "run-s compile:ts test:js",
    "test:js": "truffle test",
    "lint": "run-p -c --aggregate-output lint:solhint lint:tslint",
    "lint:tslint": "tslint --project .",
    "lint:tslint:fix": "tslint --fix --project .",
    "lint:solhint": "solhint \"contracts/**/*.sol\" \"build/flat/*.sol\"",
    "format": "prettier --write \"**/*.ts\""
  },
  <% if (props.gitRepository !== '') { %>"repository": {
    "type": "git",
    "url": "<%= props.gitRepository %>"
  },<% } %>
  <% if (props.author !== '') { %>"author": {
    "name": "<%= props.author %>"<% if (props.authorUrl !== '') { %>,
    "url": "<%= props.authorUrl %>"<% } %>
  },<% } %>
  "license": "<%= props.license %>",
  "devDependencies": {
    "@types/chai": "^4.0.8",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.57",
    "@types/ramda": "^0.25.8",
    "bignumber.js": "^5.0.0",
    "chai": "^4.1.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.2",
    "ramda": "^0.25.0",
    "solhint": "^1.1.10",
    "truffle": "<% if (props.solidityVersion == '0.4.18') { %>4.0.4<% } else { %>4.0.6<% } %>",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
